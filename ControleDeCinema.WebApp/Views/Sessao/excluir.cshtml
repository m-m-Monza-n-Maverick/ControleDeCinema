@model ControleDeCinema.WebApp.Models.ExcluirSessaoViewModel;

@{
	Layout = "_Layout";
	ViewBag.Title = "Excluir Sessão";
}

<div class="row mt-3">
	<div class="col-lg-6 d-grid gap-2">
		<label class="fs-5"><strong>Sessao</strong></label>

		<label><strong>Id:</strong> [@Model.Id]</label>

		<p class="text-bg-danger p-3 rounded fs-5 mt-2">
			Deseja excluir esta sessão? <br /> Não será possível recuperar os dados excluídos.
		</p>

		<form class="mt-2 d-grid gap-2 d-md-block" asp-action="excluir">
			<button class="btn btn-danger px-5">
				<i class="bi bi-trash-fill me-1"></i>
				Excluir
			</button>

			<a class="btn btn-secondary px-5" href="/sessao/listar">
				<i class="bi bi-arrow-return-left me-1"></i>
				Voltar
			</a>

		</form>
	</div>
</div>