@model ControleDeCinema.WebApp.Models.DetalhesSalaViewModel

@{
    Layout = "_Layout";
    ViewBag.Title = "Detalhes da Sala";

    var capacidade = Model.Capacidade;
    var filasInteiras = Math.Floor(capacidade / 16);
    var filasContagem = filasInteiras + 65;
    var poltronasExtras = capacidade - filasInteiras * 16;

    var poltronas = 0;
}

<style>
    body {
        margin-inline: 13px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .cinema-container {
        width: 100%;
        margin-top: 20px;
        max-width: 600px;
        border: 1px solid #d4d6d5;
        padding: 20px;
        border-radius: 8px;
    }

    .screen {
        width: 100%;
        height: 28px;
        background-color: #ccc;
        border-radius: 4px;
        text-align: center;
        line-height: 30px;
        margin-bottom: 20px;
        font-weight: bold;
        font-size: 13px;
    }

    .seats-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin-block: 40px 10px;
        margin-inline: 3%;
    }

    .seat {
        width: 21px;
        height: 27px;
        background-color: #5a5c5b;
        border-radius: 6px;
        margin: 0px 3px;
        justify-content: center;
        align-items: center;
        cursor : auto;
    }

    .aisle {
        width: 25px;
        margin: 4px;
    }

    .aisle2 {
        width: 5px;
        margin: 12px 100%;
    }

    .aisle3 {
        width: 21px;
        height: 27px;
        margin: 2px 3px;
        font-weight: bold;
        font-size: 11px;
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>

<div class="row">
    <div class="col-lg-3">
        <div class="d-grid">
            <label class="fs-5"><strong>Sala:</strong> @Model.Id</label>
            <label><strong>Id:</strong> [@Model.Id]</label>
            <label><strong>Capacidade:</strong> @Model.Capacidade</label>
        </div>
    </div>
</div>

<div class="cinema-container">
    <div class="screen">Tela</div>
    <div class="seats-container">
        @for (int i = 65; i <= filasContagem; i++)
        {
            for (int j = 1; j < 17; j++)
            {
                if (j == 1) {
                    <div class="aisle3">@Convert.ToChar(i)</div> }

                if (j == 9 && i != filasContagem) {
                    <div class="aisle"></div> }

                <div class="seat"></div>
                poltronas++;

                if (i == filasContagem)
                {
                    if (j == Math.Ceiling(poltronasExtras / 2)) {
                        <div class="aisle"></div> }

                    if (j == poltronasExtras) {
                        <div class="aisle3">@Convert.ToChar(i)</div> }
                }

                if (j == 16) {
                    <div class="aisle3">@Convert.ToChar(i)</div> }

                if (poltronas == capacidade)
                    break;
            }

            if (poltronas == capacidade)
                break;

            if (i == 64 + Math.Floor(filasInteiras / 2) || i == filasContagem - 1) {
                <div class="aisle2"></div> }
        }

        @if (poltronasExtras % 2 != 0) {
            <div class="aisle3"></div> }
    </div>
</div>


<a href="/sala/listar" class="btn btn-secondary px-5 mt-4">
    <i class="bi bi-arrow-return-left me-1"></i>
    Voltar
</a>