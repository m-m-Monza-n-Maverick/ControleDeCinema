@{
    string caminho = Context.Request.Path;

    var filmeAtivo = caminho.StartsWith("/filme") ? "nav-link active" : "nav-link";
    var salaAtivo = caminho.StartsWith("/sala") ? "nav-link active" : "nav-link";
    var sessaoAtivo = caminho.StartsWith("/sessao") ? "nav-link active" : "nav-link";
    var ingressoAtivo = caminho.StartsWith("/ingresso") ? "nav-link active" : "nav-link";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Controle de Cinema</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        /* Contêiner do cinema */
        .cinema-container {
            width: 100%;
            max-width: 900px;
            border: 1px solid #d4d6d5;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .ingresso-container {
            width: 400px;
            border: 1px solid #d4d6d5;
            padding: 20px;
            border-radius: 8px;
        }

        .btn-centralizar {
            width: 100%;
            max-width: 900px;
            padding: 20px;
        }

        .btn-padronizar {
            width: 150px;
        }

        /* Tela do cinema */
        .screen {
            width: 100%;
            height: 30px;
            background-color: #ccc;
            border-radius: 4px;
            text-align: center;
            line-height: 30px;
            margin-bottom: 20px;
            font-weight: bold;
        }
        /* Contêiner de poltronas */
        .seats-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin-block: 80px 30px;
            margin-inline: 2%;
        }

        /* Poltronas */
        .seat {
            width: 36px;
            height: 42px;
            background-color: #5a5c5b;
            font-size: 12px;
            color: #b9bdbb;
            border-radius: 8px;
            margin: 7px 3px;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .seat:hover {
                background-color: #666;
            }

            .seat.selected {
                background-color: #05a345;
                color: #065426
            }

            .seat-occupied {
                width: 36px;
                height: 42px;
                background-color: #f04848;
                font-size: 12px;
                color: #7d0909;
                border-radius: 8px;
                margin: 7px 3px;
                display: flex;
                justify-content: center;
                align-items: center;
                transition: background-color 0.3s ease;
                cursor: not-allowed;
            }

        .aisle {
            width: 42px;
            margin: 5px;
        }

        .aisle2 {
            width: 5px;
            margin: 15px 100%;
        }

        .aisle3 {
            width: 36px;
            height: 40px;
            margin: 7px 3px;
            font-weight: bold;
            font-size: 11px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .sidebar {
            border: 1px solid #d4d6d5;
            position: absolute;
            top: 168px;
            right: 125px;
            width: 190px;
            border-radius: 8px;
            padding: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .sidebar-img-container {
            position: relative;
            overflow: hidden;
            width: 100%;
            padding-top: 100%; /* Altera a proporção da imagem */
        }

            .sidebar-img-container img {
                position: absolute;
                top: 4px;
                left: 0;
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .sidebar p {
            margin-top: 20px;
            font-size: 13px;
            font-weight: bold;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
            margin: 10px 0 0;
            font-size: 13px;
        }

            .sidebar ul li {
                margin-bottom: 5px;
            }

        .img-footer {
            margin-top: 5px;
            text-align: center;
        }

        /* Legenda */
        .legend {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
            font-size: 14px;
        }

            .legend div {
                display: flex;
                align-items: center;
            }

                .legend div span {
                    width: 20px;
                    height: 20px;
                    margin-right: 8px;
                    display: inline-block;
                    border-radius: 4px;
                }

            .legend .available span {
                background-color: #5a5c5b;
            }

            .legend .selected span {
                background-color: #05a345;
            }

            .legend .occupied span {
                background-color: #f04848;
            }

        .btn.selected {
            background-color: #6c757d;
            color: #fff;
        }


        .card {
            overflow: hidden;
            border-color: #b1bab3;
            margin-bottom: 1rem;
        }

            .card.selected {
                border: 2px solid #898c8b;
                background-color: #f8f8f8;
                color: #000;
            }

        .card-footer {
            text-align: center;
        }

        .card-img-container {
            position: relative;
            overflow: hidden;
            width: 100%;
            padding-top: 100%; /* Altera a proporção da imagem */
        }

            .card-img-container img {
                position: absolute;
                top: 4px;
                left: 0;
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .error-message {
            color: red;
            font-size: 0.9em;
            margin-top: 10px;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    @* Navbar / Barra de Navegação *@
    <nav class="container">
        <header class="row row-cols-2 align-items-center my-3">
            <label class="fs-4 fw-semibold">Controle de Cinema</label>

            <ul class="nav nav-pills d-grid d-md-flex justify-content-md-end">
                <li class="nav-item"><a href="/filme/listar" class="@filmeAtivo">Filme</a></li>
                <li class="nav-item"><a href="/sala/listar" class="@salaAtivo">Sala</a></li>
                <li class="nav-item"><a href="/sessao/listar" class="@sessaoAtivo">Sessao</a></li>
                <li class="nav-item"><a href="/ingresso/selecionarFilme" class="@ingressoAtivo">Ingresso</a></li>
            </ul>
        </header>
    </nav>

    @* Conteúdo Principal *@
    <main class="container mt-4">
        <h2>@ViewBag.Title</h2>
        <hr/>
        @RenderBody()
    </main>

    @* Footer / Ródapé *@
    <footer class="border-top text-center mt-auto">
        <p class="my-3">&copy; Controle de Cinema Show de Bola</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="/lib/jquery-mask-plugin/dist/jquery.mask.min.js"></script>
    
    @RenderSection("Scripts", required: false)
    </body>
</html>